<body>

<div class="container">
  <div class="card">
    <h1>تفعيل الكرت</h1>
    <input type="text" id="card" placeholder="أدخل كود الكرت">
    <button class="btn" onclick="activate()">تفعيل</button>
    <p id="msg" id="msg"></p>
  </div>
</div>

<script>
/* ===== إنشاء 100 كرت جديد 5 أرقام وإلغاء أي كروت سابقة ===== */
let cards = {};

// توليد 100 كرت فريد
for(let i=0; i<100; i++){
  let code;
  do{
    code = Math.floor(10000 + Math.random()*90000).toString(); // 5 أرقام
  }while(cards[code]); // لا تكرار
  cards[code] = false; // false = غير مستخدم
}

// تخزين الكروت الجديدة في localStorage (يلغي القديمة)
localStorage.setItem("cards", JSON.stringify(cards));
localStorage.removeItem("activated"); // إعادة التفعيل لكل جلسة جديدة

console.log("✅ تم إنشاء 100 كرت جديد:", Object.keys(cards));

/* ===== تفعيل الكرت ===== */
function activate(){
  const card = document.getElementById("card").value.trim();
  const msg = document.getElementById("msg");
  let storedCards = JSON.parse(localStorage.getItem("cards"));

  if(card === ""){
    msg.textContent = "يرجى إدخال كود الكرت";
    return;
  }

  if(!(card in storedCards)){
    msg.textContent = "❌ كود الكرت غير صحيح";
    return;
  }

  if(storedCards[card] === true){
    msg.textContent = "❌ هذا الكرت مستخدم مسبقًا";
    return;
  }

  // تفعيل الكرت
  storedCards[card] = true;
  localStorage.setItem("cards", JSON.stringify(storedCards));
  localStorage.setItem("activated", "yes");

  // الانتقال لصفحة رقم الجلوس
  window.location.href = "check.html";
}
</script>

</body>
