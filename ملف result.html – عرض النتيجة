<script>
let s = localStorage.getItem("seat");
let student = students[s];

if(student){
  res.innerHTML = `
  <p><strong>الاسم:</strong> ${student.name}</p>
  <p><strong>المجموع:</strong> ${student.total}</p>
  <p><strong>الدرجات:</strong> ${student.grades.join(", ")}</p>
  `;
}else{
  res.innerText = "رقم الجلوس غير موجود";
}
</script>

